<style lang="scss">
	.title {
		margin: 0 1em 0 0;
		font-size: 1.2em;
	}

	ul {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	li {
		margin: 0;
	}

	a {
		color: var(--gray-6);
		margin: 0 0.75em;
		padding-top: 0.75em;
		padding-bottom: 0.75em;
		text-decoration: none;
		font-weight: 500;
		&.active{
			color: var(--gray-9);
		}
		&:hover:not(.active){
			color: var(--primary);
		}
	}

	.nav {
		position: sticky;
		top: 0;
		width: 100%;
		display: flex;
		align-items: center;
		padding: 1rem 2rem;
		background-color: var(--nav-bkd);
	}

	.social {
		display: block;
		margin-left: auto;
		& + .social {
			margin-left: 0.75rem;
		}
		svg {
			display: block;
			width: 1.25rem;
			height: 1.25rem;
			fill: var(--gray-6);
			transition: fill linear 150ms;
			&:hover {
				fill: var(--primary);
			}
		}
	}

	@media screen and (max-width: 860px){
		.social {
			display: none;
		}
	}

	@media screen and (max-width: 600px){
		.icon {
			height: 1.5rem;
		}
		.nav {
			padding: .75rem 1rem;
			ul {
				flex-wrap: wrap;
			}
			
		}
	}
</style>
